<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainMenuAnchorPane" prefHeight="720.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.MainMenuController">
   <children>
      <Pane prefHeight="720.0" prefWidth="640.0" style="-fx-background-color: grey;">
         <children>
            <Label layoutX="220.0" layoutY="100.0" text="MENU">
               <font>
                  <Font name="Comic Sans MS" size="69.0" />
               </font>
            </Label>
            <Button layoutX="220.0" layoutY="250.0" mnemonicParsing="false" onAction="#toLocalGame" prefHeight="48.0" prefWidth="194.0" text="LOCAL PLAY" />
            <Button layoutX="220.0" layoutY="320.0" mnemonicParsing="false" onAction="#toOnlineMenu" prefHeight="48.0" prefWidth="194.0" text="ONLINE PLAY" />
            <Button layoutX="220.0" layoutY="390.0" mnemonicParsing="false" onAction="#closeGame" prefHeight="48.0" prefWidth="194.0" text="EXIT" />
         </children>
      </Pane>
   </children>
</AnchorPane>
